{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["dom", "es2016", "es2017", "es2018", "esnext"],
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "typeRoots": ["node_modules/@types"]
    }
}
